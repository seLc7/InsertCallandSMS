<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cheng.insertcallandsms.MainActivity">



    <TextView
        android:id="@+id/title_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加通话记录"
        android:textStyle="bold"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_call"
        android:text="电话号码："
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/call_num_edit"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_view_1"
        android:maxLines="1"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_1"
        android:text="通话时长（秒级）："
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/call_duration_edit"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_view_2"
        android:layout_below="@id/text_view_1"
        android:maxLines="1"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/text_view_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_2"
        android:text="类型（1、2、3）："
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/call_type_edit"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_view_3"
        android:layout_below="@id/text_view_2"
        android:maxLines="1"
        android:textSize="18dp"/>\

    <Button
        android:id="@+id/add_call_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_3"
        android:layout_alignParentRight="true"
        android:text="添 加"/>

</RelativeLayout>
